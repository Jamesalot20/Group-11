const mongoose = require('mongoose');

const UserSchema = new mongoose.Schema({
  email: {
    type: String,
    required: true,
    unique: true,
  },
  password: {
    type: String,
    required: true,
  },
  name: {
    type: String,
    required: true,
  },
  accountType: {
    type: Number,
    required: true,
    min: 1,
    max: 3,
  },
  userID: {
    type: Number,
    required: true,
    min: 1,
  },
  cartID: {
    type: Number,
    required: true,
    min: 1,
  },
  shippingID: {
    type: Number,
    required: true,
    min: 1,
  },
});

module.exports = mongoose.model('User', UserSchema, 'User');
